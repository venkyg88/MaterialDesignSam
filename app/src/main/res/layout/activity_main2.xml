<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.example.venkatgonuguntala.materialdesignsam.MainActivity">

        <include
            android:id="@+id/app_bar"
             layout="@layout/app_bar" />

    </RelativeLayout>

    <fragment
        android:id="@+id/navigation_fragment_drawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        app:layout="@layout/navigation_fragment_drawer"
        android:layout_gravity="start"
        android:name="com.example.venkatgonuguntala.materialdesignsam.NavigationFragmentDrawer"
        tools:layout="@layout/navigation_fragment_drawer">
    </fragment>
 </android.support.v4.widget.DrawerLayout>